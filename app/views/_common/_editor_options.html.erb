<%# editor option %>
<div class="sc-editor-config" collapse="is_option_collapsed">
    <div class="container-fluid">
        <%# font size %>
        <div class="row" ng-if="!dissable_rich_editor">
            <div class="col-sm-12">
                <div class="form-group">
                    <label>FontSize</label>
                    <select ui-select2="{ minimumResultsForSearch: 20 }"
                            ng-model="font_size.current"
                            ng-change="font_size.change()"
                            style="width: 100%">
                        <option ng-repeat="font_size in font_size.list"
                                value="{{font_size}}">
                            {{font_size}}
                        </option>
                    </select>
                </div>
            </div>
        </div>
        <%# /font size %>

        <%# tab or space %>
        <div class="row" ng-if="!dissable_rich_editor">
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Tab or Space</label>
                    <select ui-select2="{ minimumResultsForSearch: 20 }"
                            ng-model="tab_or_space.current"
                            ng-change="tab_or_space.change()"
                            style="width: 100%">
                        <option ng-repeat="tab_or_space in tab_or_space.list"
                                value="{{tab_or_space}}">
                            {{tab_or_space}}
                        </option>
                    </select>
                </div>
            </div>
        </div>
        <%# /tab or space %>

        <%# indent %>
        <div class="row" ng-if="!dissable_rich_editor">
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Indent</label>
                    <select ui-select2="{ minimumResultsForSearch: 20 }"
                            ng-model="indent_size.current"
                            ng-change="indent_size.change()"
                            style="width: 100%">
                        <option ng-repeat="indent_size in indent_size.list"
                                value="{{indent_size}}">
                            {{indent_size}}
                        </option>
                    </select>
                </div>
            </div>
        </div>
        <%# /indent %>

        <%# keybind %>
        <div class="row" ng-if="!dissable_rich_editor">
            <div class="col-sm-12">
                <div class="form-group">
                    <label>KeyBind</label>
                    <select ui-select2="{ minimumResultsForSearch: 20 }"
                            ng-model="keybind.current"
                            ng-change="keybind.change()"
                            style="width: 100%">
                        <option ng-repeat="keybind in keybind.list"
                                value="{{keybind}}">
                            {{keybind}}
                        </option>
                    </select>
                </div>
            </div>
        </div>
        <%# /keybind %>

        <%# theme %>
        <div class="row" ng-if="!dissable_rich_editor">
            <div class="col-sm-12">
                <div class="form-group">
                    <label>Theme</label>
                    <select ui-select2
                            ng-model="theme.current"
                            ng-change="theme.change()"
                            style="width: 100%">
                        <option ng-repeat="theme in theme.list"
                                value="{{theme}}">
                            {{theme}}
                        </option>
                    </select>
                </div>
            </div>
        </div>
        <%# /theme %>

        <%# simple editor %>
        <div class="row">
            <div class="col-sm-12">
                <input type="checkbox"
                       id="sc-dissable-rich-editor"
                       name="sc-dissable-rich-editor"
                       ng-model="dissable_rich_editor"
                       >
                <label for="sc-dissable-rich-editor">simple editor</label>
            </div>
        </div>
        <%# /simple editor %>

    </div>
</div>
<%# /editor option %>
