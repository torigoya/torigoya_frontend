<!doctype html>
<html xmlns:ng="http://angularjs.org">
    <head>
        <title>ProcGarden</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <%= include_gon %>
        <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
        <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
        <%= favicon_link_tag '/favicon.ico' %>

        <%= csrf_meta_tags %>
    </head>

    <body data-spy="scroll">
        <!-- container -->
        <div class="container-fluid sc-top-container">
            <!-- header -->
            <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <%= link_to 'ProcGarden(鳥小屋)', '/', {'class' => 'navbar-brand'} %>
                    </div>
                    <nav class="collapse navbar-collapse" role="navigation">
                        <ul class="nav navbar-nav">
                            <li <% if params[:controller] == "home" %>class="active"<% end %>>
                                <a href="/">Home</a>
                            </li>

                            <li <% if params[:controller] == "entries" %>class="active"<% end %>>
                                <a href="/entries">Entries</a>
                            </li>

                            <li <% if params[:controller] == "samples" %>class="active"<% end %>>
                                <a href="/samples">Samples</a>
                            </li>

                            <li <% if params[:controller] == "about" %>class="active"<% end %>>
                                <a href="/about">About</a>
                            </li>

                            <% if can? :manage, :all %>
                            <li <% if params[:controller] == "master" %>class="active"<% end %>>
                                <a href="/master">ControlPanel</a>
                            </li>
                            <% end %>
                        </ul>

                        <ul class="nav navbar-nav navbar-right">
                            <% if user_signed_in? %>
                            <p class="navbar-text">Signed in as <%= current_user.name %></p>
                            <li>
                                <%= link_to "Logout", "/users/sign_out", method: 'delete', class: "navbar-link" %>
                            </li>
                            <% else %>
                            <li>
                                <%= link_to "Register", "/users/sign_up", class: "navbar-link" %>
                            </li>
                            <li>
                                <%= link_to "Login", "/users/sign_in", class: "navbar-link" %>
                            </li>
                            <% end %>
                        </ul>
                    </nav>
                </div>
            </div>
            <!-- /header -->


            <!-- notice -->
            <% if flash.any?{|k, v| v != ""} %>
            <div class="row">
                <div class="col-md-12">
                    <% flash.each do |name, message| %>
                    <%
                    tag = case name.to_s
                    when "alert", "error" then
                      'danger'
                    when "notice" then
                      'success'
                    else
                      name
                    end
                    %>

                    <div class="alert alert-<%= tag %> alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <%= message %>
                    </div>

                    <% end %>
                </div>
            </div>
            <% end %>
            <!-- /notice -->


            <!-- body -->
            <div class="main-container" ng-view>
                <%= yield %>

                <!-- footer -->
                <div id="footer">
                    <div class="container-fluid">
                        <img id="symbol-bunchou" src="/assets/pepe.png">
                        <p class="navbar-text pull-right">
                            2013 - 2014 <%= link_to "@yutopp", "https://twitter.com/yutopp" %>
                        </p>
                    </div>
                </div>
                <!-- /footer -->
            </div>
            <!-- body -->

        </div>
        <!-- /container -->
    </body>

    <script type="text/javascript">
    offset = 60;
    $('body').scrollspy({ target: '#sc-navbar', offset: offset });
    $('.sc-nav li a').click(function(event) {
        event.preventDefault();
        $($(this).attr('href'))[0].scrollIntoView();
        scrollBy(0, -offset);
    });
    </script>
</html>
