<div class="container">
    <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
            <h2><span class="glyphicon glyphicon-file"></span> Complete</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
            <div class="well well-sm">
                <%= devise_error_messages! %>

                <%= form_for( resource, :as => resource_name, :url => '/users/complete_link', :html => { :class => 'form-horizontal', :role => 'form' } ) do |f| %>

                    <div class="form-group">
                        <%= f.label :name, :class => 'control-label' %>

                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                            <%= f.text_field :name, :class => 'form-control', :value => @name, :disabled => true %>
                        </div>

                        <%= f.label :email, :class => 'control-label' %>
                        <div class="input-group">
                            <div class="input-group-addon">@</div>
                            <%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'Email' %>
                        </div>
                    </div>

                    <div class="form-group">
                        <%= f.submit "Register", :class => 'btn btn-primary btn-block' %>
                    </div>
                <% end %>

                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</div>
