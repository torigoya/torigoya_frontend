<div class="container">
    <div class="row">
        <div class="col-sm-offset-2 col-sm-5">
            <h2><span class="glyphicon glyphicon-user"></span> Login</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-offset-2 col-sm-5">
            <div class="well well-sm">
                <%= form_for( resource, :as => resource_name, :url => session_path( resource_name ), :html => { :class => 'form-horizontal', :role => 'form' } ) do |f| %>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon">@ / <span class="glyphicon glyphicon-user"></span></div>
                            <%= f.email_field :email, :class => 'form-control', :placeholder => 'Email or Username' %>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                            <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password' %>
                        </div>

                        <% if devise_mapping.rememberable? -%>
                            <div class="checkbox">
                                <%= f.label :remember_me do %>
                                    <%= f.check_box :remember_me %> Remember me
                                <% end %>
                            </div>
                        <% end -%>

                        <%= f.submit "Login", :class => 'btn btn-primary btn-block' %>
                    </div>
                <% end -%>

                <%= render "devise/shared/links" %>
            </div>
        </div>

        <div class="col-sm-3">
            <div class="well well-sm">
                <%- if devise_mapping.omniauthable? %>
                    <%- resource_class.omniauth_providers.each do |provider| %>
                        <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br>
                    <% end -%>
                <% end -%>
            </div>
        </div>

    </div>
</div>
